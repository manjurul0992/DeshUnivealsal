@model DeshUnivealsal.Models.DTOs.CountryDTO

@{
    ViewBag.Title = "Edit Country";
}

<h2>Edit Country</h2>

@using (Html.BeginForm("Edit", "Countries", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ISO2, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.ISO2, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ISO2, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ISO3, htmlAttributes: new { @class = "control-label" })
        @Html.TextBoxFor(m => m.ISO3, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ISO3, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
