@model DeshUnivealsal.Models.DTOs.CountryDTO

@{
    ViewBag.Title = "Country Details";
}

<h2 class="alert alert-info">Country Details</h2>

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <tr>
            <th>ID</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>ISO2</th>
            <td>@Model.ISO2</td>
        </tr>
        <tr>
            <th>ISO3</th>
            <td>@Model.ISO3</td>
        </tr>
        <tr>
            <th>Total Cities</th>
            <td>@Model.TotCities</td>
        </tr>
    </table>
</div>

<div>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
</div>
