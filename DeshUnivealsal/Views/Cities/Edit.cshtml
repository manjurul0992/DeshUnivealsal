@model DeshUnivealsal.Models.DTOs.CityDTO

@{
    ViewBag.Title = "Edit City";
}

<h2 class="alert alert-info">Edit City</h2>

@using (Html.BeginForm("Edit", "Cities", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            @Html.HiddenFor(model => model.Id) <!-- Hidden field for Id -->

            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lat, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lat, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lat)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Lon, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Lon, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Lon)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CountryId, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CountryId, (SelectList)ViewBag.Countries, "Select a Country", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CountryId)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
}
